<% layout('layout/main') -%>
<% block('title', 'Add') -%>

<form target="/users/add"  method="POST" >
    <div class="form-group col-md-6 offset-md-3">
      <label for="name">Name</label>
      <input type="text" name="name" class="form-control" id="name" placeholder="Name" required >
    </div>
    <div class="form-group col-md-6 offset-md-3">
        <label for="username">Username</label>
        <input type="text" name="username" class="form-control" id="username" placeholder="Username" required>
      </div>
    <div class="form-group col-md-6 offset-md-3">
      <label for="email">Email</label>
      <input type="text" name="email" class="form-control" id="email" placeholder="email" required>
    </div>
    <div class="form-group col-md-6 offset-md-3">
        <label for="age">Age</label>
        <input type="number" name="age" class="form-control" id="age" placeholder="Age" required>
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <label for="address">Address</label>
      <input type="text" name="address" class="form-control" id="address" placeholder="Address" required>
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <label for="phoneNumber">Phone Number</label>
      <input type="number" name="phoneNumber" class="form-control" id="phoneNumber" placeholder="Phone Number" required>
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <label for="school">School</label>
      <input type="tel" name="school" class="form-control" id="school" placeholder="School" required>
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <label for="steamLevel">Steam Level</label>
      <input type="number" name="steamLevel" class="form-control" id="steamLevel" placeholder="Steam Level" required>
    </div>
 
    <div class="form-group col-md-6 offset-md-3">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>
